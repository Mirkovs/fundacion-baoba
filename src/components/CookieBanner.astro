<div id="cookie-banner" class="cookie-banner hidden">
  <div class="container">
    <div class="cookie-content">
      <p>
        Utilizamos cookies propias y de terceros para mejorar su experiencia de navegación y realizar tareas de analítica. 
        Al continuar navegando, entendemos que acepta nuestra <a href="/politica-cookies">política de cookies</a>.
      </p>
      <div class="cookie-actions">
        <button id="accept-cookies" class="btn-cookie btn-accept">Aceptar</button>
        <button id="reject-cookies" class="btn-cookie btn-reject">Rechazar</button>
      </div>
    </div>
  </div>
</div>

<style>
  .cookie-banner {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #ffffff;
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.1);
    z-index: 9999;
    padding: var(--spacing-md) 0;
    border-top: 1px solid var(--color-border);
    transform: translateY(100%);
    transition: transform 400ms ease-out;
  }

  .cookie-banner.visible {
    transform: translateY(0);
  }

  .cookie-banner.hidden {
    display: none;
  }

  .cookie-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    align-items: center;
    text-align: center;
  }

  @media (min-width: 768px) {
    .cookie-content {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .cookie-content p {
    margin: 0;
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
  }

  .cookie-content a {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .cookie-actions {
    display: flex;
    gap: var(--spacing-sm);
  }

  .btn-cookie {
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-sm);
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-fast);
    border: 1px solid transparent;
  }

  .btn-accept {
    background-color: var(--color-primary);
    color: white;
  }

  .btn-accept:hover {
    background-color: var(--color-primary-dark);
  }

  .btn-reject {
    background-color: transparent;
    border-color: var(--color-border);
    color: var(--color-text-light);
  }

  .btn-reject:hover {
    background-color: var(--color-background-alt);
    border-color: var(--color-text);
    color: var(--color-text);
  }
</style>

<script>
  function initCookieBanner() {
    const banner = document.getElementById('cookie-banner');
    const acceptBtn = document.getElementById('accept-cookies');
    const rejectBtn = document.getElementById('reject-cookies');

    if (!banner || !acceptBtn || !rejectBtn) return;

    // Check if user has already made a choice
    const cookieChoice = localStorage.getItem('cookie-choice');

    if (!cookieChoice) {
      // Show banner after a short delay
      banner.classList.remove('hidden');
      setTimeout(() => {
        banner.classList.add('visible');
      }, 500);
    }

    acceptBtn.addEventListener('click', () => {
      localStorage.setItem('cookie-choice', 'accepted');
      hideBanner();
    });

    rejectBtn.addEventListener('click', () => {
      localStorage.setItem('cookie-choice', 'rejected');
      hideBanner();
    });

    function hideBanner() {
      banner.classList.remove('visible');
      setTimeout(() => {
        banner.classList.add('hidden');
      }, 500);
    }
  }

  // Initialize on page load
  initCookieBanner();
  
  // Re-initialize for view transitions if using them
  document.addEventListener('astro:after-swap', initCookieBanner);
</script>
