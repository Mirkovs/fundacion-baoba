---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const resources = [
  {
    title: "Boletín Anual",
    description: "Consulta todos los boletines de la fundación para conocer el detalle técnico de nuestra gestión.",
    type: "PDF",
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>`
  }
];
---

<BaseLayout 
  title="Recursos - Fundación BAOBAB"
  description="Accede a nuestros boletines informativos y materiales descargables sobre la labor de la Fundación Baobab."
>
  <Header />
  
  <main>
    <section class="page-header">
      <div class="container">
        <h1>Recursos</h1>
        <p>Documentación, boletines y material informativo de libre acceso.</p>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <div class="resources-grid">
          {resources.map(item => (
            <div class="resource-card">
              <div class="resource-icon" set:html={item.icon}></div>
              <div class="resource-info">
                <h3>{item.title}</h3>
                <p>{item.description}</p>
                <div class="resource-meta">
                    <span class="file-type">{item.type}</span>
                    <a href="#" class="download-link">Descargar documento</a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .page-header {
    background-color: var(--color-primary);
    color: white;
    padding: var(--spacing-3xl) 0;
    text-align: center;
  }
  
  .page-header h1 {
    color: white;
    font-size: var(--font-size-4xl);
    margin-bottom: var(--spacing-md);
  }

  .resources-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: var(--spacing-xl);
  }

  .resource-card {
      display: flex;
      gap: var(--spacing-lg);
      background: white;
      padding: var(--spacing-xl);
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-sm);
      border: 1px solid var(--color-border);
  }

  .resource-icon {
      color: var(--color-primary);
      flex-shrink: 0;
  }

  .resource-info h3 {
      font-size: var(--font-size-xl);
      margin-bottom: var(--spacing-sm);
  }

  .resource-info p {
      color: var(--color-text-light);
      margin-bottom: var(--spacing-md);
      font-size: var(--font-size-sm);
  }

  .resource-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: var(--spacing-md);
  }

  .file-type {
      background-color: var(--color-background-alt);
      padding: 2px 8px;
      border-radius: var(--radius-sm);
      font-size: 0.75rem;
      font-weight: bold;
      color: var(--color-text-light);
  }

  .download-link {
      font-weight: 600;
      color: var(--color-primary);
      font-size: var(--font-size-sm);
  }

  .download-link:hover {
      text-decoration: underline;
  }
</style>
